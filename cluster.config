params {

    // Reads and references
    adapter_fa = "/path/to/your/TruSeq3-SE.fa"
    blacklist = "/path/to/your/hg38-blacklist.v2.bed"
    ucsc_genes = "/path/to/your/hg38_genes.bed" 

    genome = "/path/to/your/GRCh38.primary_assembly.genome.fa"
    gtf = "/path/to/your/gencode.v45.primary_assembly.annotation.gtf"
    window = 2000
    corrtype = 'spearman'

    samplesheet = "$projectDir/full_samplesheet.csv" //modify for your samples

    // Directories
    outdir = "$projectDir/results/"
    refdir = "$projectDir/refs/"
}

profiles {
    conda {
        conda.enabled = true
    }
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
    cluster {
        process {
                executor = 'sge'
                clusterOptions = '-P bf528'
                penv = 'omp'

                withLabel: process_single {
                    cpus = 1
                }

                withLabel: process_low {
                    cpus = 4

                }
                withLabel: process_medium {
                    cpus = 8
                }
                
                withLabel: process_high {
                    cpus = 16
                }
        }
    }

    local {
        process.executor = 'local'
    }
}

executor {
    $sge {
        queueSize = 8
    }
    $local {
        cpus = 1
    }
}

resume = true