params {
    // Reads and references (replace with S3 paths or EBS-mounted paths)
    adapter_fa = "s3://path/to/your/TruSeq3-SE.fa"
    blacklist = "s3://path/to/your/hg38-blacklist.v2.bed"
    ucsc_genes = "s3://path/to/your/hg38_genes.bed"

    genome = "s3://path/to/your/GRCh38.primary_assembly.genome.fa"
    gtf = "s3://path/to/your/gencode.v45.primary_assembly.annotation.gtf"
    window = 2000
    corrtype = 'spearman'

    samplesheet = "$projectDir/full_samplesheet.csv" //modify for your samples

    // Directories (can point to local scratch or S3)
    outdir = "$projectDir/results/"
    refdir = "$projectDir/refs/"
}

profiles {

    conda {
        conda.enabled = true
    }

    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }

    awsbatch {
        process {
            executor = 'awsbatch'
            
            // Replace with your AWS Batch job queue name
            queue = 'my-job-queue'
            
            // Optional: AWS Batch job definition
            // jobDefinition = 'my-job-definition'

            // Process resources
            withLabel: process_single {
                cpus = 1
                memory = '2 GB'
            }

            withLabel: process_low {
                cpus = 4
                memory = '8 GB'
            }

            withLabel: process_medium {
                cpus = 8
                memory = '16 GB'
            }

            withLabel: process_high {
                cpus = 16
                memory = '32 GB'
            }

            time = '2h'
        }
    }

    local {
        process.executor = 'local'
    }
}

// Executor defaults
executor {
    local {
        cpus = 1
    }
}

resume = true
